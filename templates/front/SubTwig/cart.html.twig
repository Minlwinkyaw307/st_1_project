{% extends 'front/SubTwig/front.base.html.twig' %}

{% block title %}{{ title }}{% endblock %}
{% block body %}
    <div class="" style="height: 100px; width: 100%"></div>
    <div class="container my-5">
        <div class="row">
            {% include('front/SubTwig/profile-nav.html.twig') %}
            <div class="col col-lg-9 col-md-9 col-sm-12">
                <div class="list-group ">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for cart in carts %}
                        <div class="list-group-item list-group-item-action my-1">
                            <div class="custom-control custom-checkbox d-inline-block float-left">
                                <input type="checkbox" class="custom-control-input" id="customCheck1">
                                <label class="custom-control-label" for="customCheck1"></label>
                            </div>
                            <span class="float-left">{{ cart.product.name }} x {{ cart.amount }}</span>

                            <span class="float-right"><b>{{ cart.product.price * cart.amount }}</b></span>
                            <div class="" style="clear: left;"></div>
                            <span class="float-right">{{ cart.addedAt | date("m-d-Y") }}</span>
                            <div style="clear: right;"></div>
                            <br>
                            <div>
                            <span class="float-right">
                                <form method="post" action="{{ path('front.cart_delete', {'id': cart.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ cart.id) }}">
                                    <button class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </span>
                            </div>
                        </div>

                    {% else %}
                        <h3>Your cart list empty.</h3>
                    {% endfor %}

                </div>
                <button class="btn btn-primary float-right my-3">Order All</button>
                <button class="btn btn-outline-primary float-right mx-2 my-3">Order Selected</button>
            </div>

        </div>

    </div>
    <div class="" style="height: 25px; width: 100%"></div>

    {% include 'front/SubTwig/front.footer.html.twig' %}
{% endblock %}
