<div>

    <div class="col-lg-12 col-md-12 col-12 p-0 m-0">
        <!-- //banner -->
        <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                {% for slider in sliders %}

                    <div class="carousel-item {{ loop.index == 1 ? "active" : "" }}">
                        <div class="" style="background-color: rgba(0,0,0,1)">
                            <a href="{{ path('front.food-detail', {'id' : slider.food.id}) }}">
                            <img style="opacity: 0.7" class="d-block w-100" src="{{ asset('Upload/Images')}}/{{ slider.image.location }}" alt="First slide">
                            </a>

                        </div>
                        <div class="carousel-caption d-none d-md-block" style="background-color: rgba(0,0,0,0)">
                            <h4>{{slider.title}}</h4>
                            <p class="text-white">{{ slider.content }}</p>
                        </div>
                    </div>
                {% else %}
                    <div class="carousel-item">
                        <img class="d-block w-100" src="https://cdn.pixabay.com/photo/2018/02/08/22/27/flower-3140492__340.jpg"
                             alt="First slide">
                        <div class="carousel-caption d-none d-md-block" style="background-color: rgba(0,0,0,0.2)">
                            <h5>First Slider</h5>
                            <p>Lorem</p>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>


