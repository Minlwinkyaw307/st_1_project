<!DOCTYPE html>
<html lang="en">

<head>
    {% include('admin/SubTwig/header.html.twig') %}

</head>

<body>
<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <h1><i class="fa fa-utensils"> </i> Crispy</h1>
                        </a>
                    </div>
                    <div class="login-form">
                        <form action="" method="post">
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}">
                            {#username#}
                            <div class="form-group">
                                <label>Username</label>
                                <input class="au-input au-input--full" type="text" name="user[username]" placeholder="Username">
                            </div>
                            {#email address#}
                            <div class="form-group">
                                <label>Email Address</label>
                                <input class="au-input au-input--full" type="email" name="user[email]" placeholder="Email">
                            </div>
                            {#roles#}
                            <div class="form-group">
                                <label>Role</label>
                                <select name="user[roles]" id=""class="au-input au-input--full form-control">
                                    <option value="ROLE_USER">Normal</option>
                                    <option value="ROLE_ADMIN">Admin</option>
                                </select>
                            </div>
                            {#password#}
                            <div class="form-group">
                                <label>Password</label>
                                <input class="au-input au-input--full" name="user[password]" placeholder="Password"
                                       type="password">
                            </div>
                            {#repassword#}
                            <div class="form-group">
                                <label>ReType-Password</label>
                                <input class="au-input au-input--full" type="password" name="repassword"
                                       placeholder="Password">
                            </div>
                            <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">register</button>
                        </form>
                        <div class="register-link">
                            <p>
                                Already have account?
                                <a href="#">Sign In</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% include('admin/SubTwig/javascript.html.twig') %}
</body>

</html>
