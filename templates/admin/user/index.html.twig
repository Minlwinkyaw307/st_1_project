{% extends 'admin/SubTwig/base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="col-md-12">
        <div class="table-responsive m-b-40">
            <table class="table table-borderless table-data3">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>name</th>
                    <th>Roles</th>
                    <th>Edit</th>
                    <th>Show</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.username }}</td>
                                        <td>{{ user.roles|join(',') }}</td>
                        <td>
                            <a class="btn btn-sm btn-secondary" href="{{ path('user_edit', {'id': user.id}) }}">edit</a>
                        </td>
                        <td>
                            <a class="btn btn-sm btn-primary" href="{{ path('user_show', {'id': user.id}) }}">show</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a href="{{ path('user_new') }}">Create new</a>
    </div>
{% endblock %}
