{% extends 'admin/SubTwig/base.html.twig' %}

{% block title %}{{title}}{% endblock %}

{% block body %}
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <h1 style="display: inline-block">{{message.subject}} </h1>
            <a href="{{ path('message_index') }}" class="btn btn-dark btn-sm float-right">
                <i class="fa fa-arrow-left"></i> back to list
            </a>
        </div>
        <div class="card-body">
            <div class="col-md-12">
                <div class="table-responsive m-b-40">
                    <table class="table table-bordered table-data3">
        <tbody>
            <tr>
                <th class="bg-dark text-white">Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th class="bg-dark text-white">Name</th>
                <td>{{ message.name }}</td>
            </tr>
            <tr>
                <th class="bg-dark text-white">Email</th>
                <td>{{ message.email }}</td>
            </tr>
            <tr>
                <th class="bg-dark text-white">Phone</th>
                <td>{{ message.phone }}</td>
            </tr>
            <tr>
                <th class="bg-dark text-white">Subject</th>
                <td>{{ message.subject }}</td>
            </tr>
            <tr>
                <th class="bg-dark text-white">Ip</th>
                <td>{{ message.ip }}</td>
            </tr>
            <tr>
                <th class="bg-dark text-white">Status</th>
                <td>{{ message.status }}</td>
            </tr>
            <tr>
                <th class="bg-dark text-white">Created_at</th>
                <td>{{ message.createdAt ? message.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th class="bg-dark text-white">Updated_at</th>
                <td>{{ message.updatedAt ? message.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
                </div>
            </div>
        </div>
        <div class="card-footer">

    {{ include('admin/message/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
