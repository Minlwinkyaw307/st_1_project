{% extends 'admin/image/base.html.twig' %}

{% block title %}Image index{% endblock %}

{% block body %}
    <!-- Page Content -->
    <div class="container">
        <h1 class="font-weight-light text-center text-lg-left mt-4 mb-0">Image Gallery</h1>
        <hr class="mt-2 mb-5">

        <div class="row text-center text-lg-left">
            {% for image in images %}
                <div class="col-lg-3 col-md-4 col-6">
                    <img class="img-fluid img-thumbnail" src="{{ asset('Upload/Images/') }}/{{ image.location }}" alt="" >
                    <a href="{{ path('image_update_food_image', {'id': image.id, 'food_id': id}) }}" class="btn btn-sm btn-primary float-left my-2">Use</a>
                    {% include('admin/image/_delete_form.html.twig') with {'floatClass' : 'float-right my-2'} %}
                </div>
            {% endfor %}
        </div>
    </div>
    <!-- /.container -->

{% endblock %}
