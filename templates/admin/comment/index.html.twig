{% extends 'admin/SubTwig/base.html.twig' %}

{% block title %}{{ title }}{% endblock %}

{% block body %}
    <div class="col-md-12">
        <div class="table-responsive m-b-40">
            <table class="table table-borderless table-data3">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Post Id</th>
                    <th>Commented By</th>
                    <th>Rate</th>
                    <th>Commented At</th>
                    <th>Edit</th>
                    <th>Show</th>
                </tr>
                </thead>
                <tbody>
                {% for comment in comments %}
                    <tr>
                        <td>{{ comment.id }}</td>
                        <td>{{ comment.product.id }}</td>
                        <td>{{ comment.commentedBy.username }}</td>
                        <td>{{ comment.rate }}</td>
                        <td>{{ comment.commentedAt ? comment.commentedAt|date('Y-m-d') : '' }}</td>
                        <td>
                            <a class="btn btn-sm btn-secondary" href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>
                        </td>
                        <td>
                            <a class="btn btn-sm btn-primary" href="{{ path('comment_show', {'id': comment.id}) }}">show</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
