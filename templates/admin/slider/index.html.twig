{% extends 'admin/SubTwig/base.html.twig' %}

{% block title %}Slider index{% endblock %}

{% block body %}
<div class="col-md-12">
    <div class="table-responsive m-b-40">
        <table class="table table-borderless table-data3">
        <thead>
            <tr>
                <th>#</th>
                <th>Title</th>
                <th>Image</th>
{#                <th>Content</th>#}
{#                <th>Status</th>#}
{#                <th>Create_at</th>#}
                <th>Edit</th>
                <th>Show</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
        {% for slider in sliders %}
            <tr>
                <td>{{ slider.id }}</td>
                <td>
                    {{ slider.title }}
                    {% if slider.status %}
                        <span class="badge badge-primary"> Enable</span>
                    {% else%}
                        <span class="badge badge-warning"> Unable</span>
                    {% endif %}

                </td>
                <td>
                    {% if slider.image %}
                        <img height="75px" width="100px" style="object-fit: cover;" src="{{ asset('Upload/Images/') }}{{ slider.image.location }}" alt="" >
                    {% else %}
                        <span>No Image</span>
                    {% endif %}
                </td>
{#                <td>{{ slider.content }}</td>#}
{#                <td>{{ slider.status ? 'Yes' : 'No' }}</td>#}
{#                <td>{{ slider.createAt ? slider.createAt|date('Y-m-d') : '' }}</td>#}
                <td>
                    <a class="btn btn-sm btn-primary" href="{{ path('slider_show', {'id': slider.id}) }}"> <i class="fa fa-sign-in-alt"></i> show</a>
                </td>
                <td>
                    <a class="btn btn-sm btn-success" href="{{ path('slider_edit', {'id': slider.id}) }}">
                        <i class="fa fa-edit"></i> edit
                    </a>
                </td>
                <td>
                    {% include('admin/slider/_delete_form.html.twig') with {'formClasses' : 'btn-sm btn-danger', 'icon' : '<i class="fa fa-trash-alt"></i>' } %}
                </td>

            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    <a class="btn btn-primary float-right" href="{{ path('slider_new') }}">Create new</a>
</div>



{% endblock %}
