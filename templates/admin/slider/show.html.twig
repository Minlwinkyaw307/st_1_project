{% extends 'admin/SubTwig/base.html.twig' %}

{% block title %}Slider{% endblock %}

{% block body %}
    <h1>Slider</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ slider.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ slider.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ slider.content }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ slider.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Create_at</th>
                <td>{{ slider.createAt ? slider.createAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('slider_index') }}">back to list</a>

    <a href="{{ path('slider_edit', {'id': slider.id}) }}">edit</a>

    {{ include('admin/slider/_delete_form.html.twig') }}
{% endblock %}
