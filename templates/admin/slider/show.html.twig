{% extends 'admin/SubTwig/base.html.twig' %}

{% block title %}Slider{% endblock %}

{% block body %}
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong>{{ slider.title }}</strong>
            <a class="btn-sm btn btn-dark float-right" href="{{ path('slider_index') }}">
                <i class="fa fa-arrow-left"></i> back to list
            </a>
        </div>
        <div class="card-body">
            <div class="col-md-12">
                <div class="table-responsive m-b-40">
                    <table class="table table-bordered table-data3">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ slider.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ slider.title }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ slider.content }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ slider.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Create_at</th>
                <td>{{ slider.createAt ? slider.createAt|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>
                </div>
            </div>
        </div>
        <div class="card-footer">
    <a href="{{ path('slider_index') }}">back to list</a>

    <a href="{{ path('slider_edit', {'id': slider.id}) }}">edit</a>

    {{ include('admin/slider/_delete_form.html.twig') }}
    </div>
</div>

{% endblock %}
