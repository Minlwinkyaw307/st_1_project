{% extends 'admin/SubTwig/base.html.twig' %}

{% block title %}Food{% endblock %}

{% block body %}
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong>{{ food.name }}</strong>
                <a class="btn-sm btn btn-dark float-right" href="{{ path('food_index') }}">
                    <i class="fa fa-arrow-left"></i> back to list
                </a>
            </div>
            <div class="card-body">
                <div class="col-md-12">
                    <div class="table-responsive m-b-40">
                        <table class="table table-bordered table-data3">
                            <tbody>
                            <tr>
                                <th class="bg-dark text-white">Id</th>
                                <td>{{ food.id }}</td>
                            </tr>
                            <tr>
                                <th class="bg-dark text-white">Name</th>
                                <td>{{ food.name }}</td>
                            </tr>
                            <tr>
                                <th class="bg-dark text-white">Category</th>
                                <td>{{ food.category.name }}</td>
                            </tr>
                            <tr>
                                <th class="bg-dark text-white">Image</th>
                                <td><img src="{{ asset('Upload/Images') }}/{{ food.image.location }}" alt="" style="object-fit: cover; height: 150px ; width: 100%"></td>
                            </tr>
                            <tr>
                                <th class="bg-dark text-white">Price</th>
                                <td>{{ food.price }}</td>
                            </tr>
                            <tr>
                                <th class="bg-dark text-white">Keywords</th>
                                <td>{{ food.keywords }}</td>
                            </tr>
                            <tr>
                                <th class="bg-dark text-white">Description</th>
                                <td>{{ food.description }}</td>
                            </tr>
                            <tr>
                                <th class="bg-dark text-white">Created At</th>
                                <td>{{ food.createdAt ? food.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            <tr>
                                <th class="bg-dark text-white">Updated At</th>
                                <td>{{ food.updatedAt ? food.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="card-footer">

                <a class="btn btn-sm btn-primary float-left" href="{{ path('food_edit', {'id': food.id}) }}">
                    <i class="fa fa-dot-circle-o"></i> edit
                </a>
                {% include('admin/food/_delete_form.html.twig') with {'floatClass' : 'float-right'} %}
            </div>
        </div>
    </div>
{% endblock %}
