{% extends 'admin/SubTwig/base.html.twig' %}

{% block title %}Order Detail{% endblock %}

{% block body %}
<div class="col-md-12">
    <div class="card">
        <div class="card-header">
            <strong>{{ odr.product.name }}</strong>
            <a class="btn-sm btn btn-dark float-right" href="{{ path('order-history') }}">
                <i class="fa fa-arrow-left"></i> back to list
            </a>
        </div>
        <div class="card-body">
            <div class="col-md-12">
                <div class="table-responsive m-b-40">
                    <table class="table table-bordered table-data3">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ odr.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ odr.amount }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ odr.status }}</td>
            </tr>
            <tr>
                <th>Ordered_at</th>
                <td>{{ odr.orderedAt ? odr.orderedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
                </div>
            </div>
        </div>
        <div class="card-footer">
    <a class="btn btn-secondary" href="{{ path('order-history') }}">back to Order History</a>


    {{ include('admin/order/_delete_form.html.twig') }}
    </div>
</div>

{% endblock %}
